<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_record"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="4dp"
    android:background="@drawable/basic_border_fill">

    <TextView
        android:id="@+id/tv_recordName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="4dp"
        android:text="record"
        android:textAlignment="textStart"
        android:textColor="@color/text_light"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recordingTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:text="00:32:12"
        android:textSize="20sp"
        android:textColor="@color/accent1"
        app:layout_constraintTop_toBottomOf="@+id/tv_recordName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_startTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="2022/08/15 12:20:40"
        android:textSize="16sp"
        android:textColor="@color/text_middle_light"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_recordingTime"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_endTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="2022/08/15 12:50:12"
        android:textSize="16sp"
        android:textColor="@color/text_middle_light"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_startTime"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>