<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimingMemo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent2</item>
        <item name="colorPrimaryVariant">@color/sub</item>
        <item name="colorOnPrimary">@color/main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main</item>
        <item name="colorSecondaryVariant">@color/main</item>
        <item name="colorOnSecondary">@color/accent3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main</item>

        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
    </style>

    <!-- 画面遷移アニメーションの詳細設定 -->
    <style name="Animation" parent="android:Animation" />
    <style name="Animation.Activity" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_transition_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_transition_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_transition_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_transition_out</item>
    </style>

    <!--  TabLayout スタイル  -->
    <style name="TabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <!--  EditText スタイル  -->
    <style name="EditTextSubColorStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/sub</item>
        <item name="colorControlActivated">@color/sub</item>
        <item name="android:textCursorDrawable">@color/sub</item>
        <item name="android:textColor">@color/sub</item>
        <item name="android:textColorHint">@color/text_little_dark</item>
        <item name="android:textColorHighlight">@color/accent2</item>
    </style>

    <style name="EditTextMainColorStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/main</item>
        <item name="colorControlActivated">@color/main</item>
        <item name="android:textCursorDrawable">@color/main</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textColorHint">@color/main_little</item>
        <item name="android:textColorHighlight">@color/accent2</item>
    </style>

    <!--  ツールバー スタイル  -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--    戻るボタン（←）の色変更    -->
        <item name="colorControlNormal">@color/sub</item>
        <!--    titleの色変更    -->
        <item name="android:textColorPrimary">@color/sub</item>
        <item name="android:textColorSecondary">@color/sub</item>
    </style>

    <!-- AlertDialog スタイル -->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--    テキスト色    -->
        <item name="android:textColorPrimary">@color/main</item>
        <!--    ボタン色    -->
        <item name="colorAccent">@color/accent1</item>
        <!--    背景色    -->
        <item name="android:background">@color/sub</item>
    </style>

    <!-- NumberPicker スタイル -->
    <style name="NumberPickerStyle" parent="Theme.AppCompat.Light.NoActionBar" >
        <!--    テキスト色    -->
        <item name="android:textColorPrimary">@color/main</item>
        <!--    区切り線    -->
        <item name="android:colorControlNormal">@color/main</item>
    </style>

</resources>