<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/subColor">

    <TextView
        android:id="@+id/tv_timePickerDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:text="Title"
        android:textColor="@color/mainColor"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/np_hh1"
        app:layout_constraintStart_toStartOf="parent"/>

    <NumberPicker
        android:id="@+id/np_hh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:textColor="@color/mainColor"
        app:layout_constraintTop_toBottomOf="@+id/tv_timePickerDialogTitle"
        app:layout_constraintBottom_toTopOf="@+id/v_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_h" />

    <TextView
        android:id="@+id/tv_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text=":"
        android:textColor="@color/mainColor"
        app:layout_constraintTop_toBottomOf="@+id/tv_timePickerDialogTitle"
        app:layout_constraintBottom_toTopOf="@+id/v_border"
        app:layout_constraintStart_toEndOf="@id/np_hh1"
        app:layout_constraintEnd_toStartOf="@id/np_mm1"/>

    <NumberPicker
        android:id="@+id/np_mm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/mainColor"
        app:layout_constraintTop_toBottomOf="@+id/tv_timePickerDialogTitle"
        app:layout_constraintBottom_toTopOf="@+id/v_border"
        app:layout_constraintStart_toEndOf="@id/tv_h"
        app:layout_constraintEnd_toStartOf="@id/tv_m" />

    <TextView
        android:id="@+id/tv_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text=":"
        android:textColor="@color/mainColor"
        app:layout_constraintTop_toBottomOf="@+id/tv_timePickerDialogTitle"
        app:layout_constraintBottom_toTopOf="@+id/v_border"
        app:layout_constraintStart_toEndOf="@id/np_mm1"
        app:layout_constraintEnd_toStartOf="@id/np_ss1"/>

    <NumberPicker
        android:id="@+id/np_ss1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/mainColor"
        app:layout_constraintTop_toBottomOf="@+id/tv_timePickerDialogTitle"
        app:layout_constraintBottom_toTopOf="@+id/v_border"
        app:layout_constraintStart_toEndOf="@id/tv_m"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--    区切り線    -->
    <View
        android:id="@+id/v_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/mainColor"
        app:layout_constraintBottom_toTopOf="@+id/iv_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_save"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/baseline_check_main_color_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>