<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".ui.record.RecordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_timer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/mainColor"
        tools:context=".ui.record.RecordFragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_recordCtrl"
        app:layout_constraintVertical_weight="1">

        <TextView
            android:id="@+id/tx_recordTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/timeColor"
            android:gravity="center"
            android:text="00:00:00"
            android:textAlignment="center"
            android:textColor="@color/movieColor3"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ll_delayTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="7" />

        <LinearLayout
            android:id="@+id/ll_delayTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/movieColor4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tx_recordTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:gravity="center"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/movieColor5"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_delayTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="00:00"
                android:textAlignment="center"
                android:textColor="@color/movieColor5"
                android:textSize="20sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    記録再生イメージ／記録制御    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_recordCtrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/movieColor3"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/cl_timer"
        app:layout_constraintBottom_toTopOf="@+id/v_border2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--    記録イメージ    -->
        <ImageView
            android:id="@+id/iv_recordCircle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/record_sample2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/v_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/v_stampMemoImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:background="@drawable/image_add_stamp_memo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/v_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!--    区切り線    -->
        <View
            android:id="@+id/v_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/delayColor"
            app:layout_constraintTop_toBottomOf="@+id/iv_recordCircle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--    記録制御アイコン    -->
        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/record_control_icon_size"
            android:layout_height="@dimen/record_control_icon_size"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/baseline_time_play"
            app:layout_constraintTop_toBottomOf="@+id/v_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_pause"
            android:layout_width="@dimen/record_control_icon_size"
            android:layout_height="@dimen/record_control_icon_size"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/baseline_time_pause"
            app:layout_constraintTop_toBottomOf="@+id/v_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_stop"
            android:layout_width="@dimen/record_control_icon_size"
            android:layout_height="@dimen/record_control_icon_size"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/baseline_time_stop"
            app:layout_constraintTop_toBottomOf="@+id/v_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


